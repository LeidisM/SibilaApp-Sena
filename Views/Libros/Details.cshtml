@model SibilaApp.Models.Libros

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2 class="mt-0" id="texto">Usuario: @Model.Titulo</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Autor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Autor)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Editorial)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Editorial)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ISBN)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ISBN)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Subcategoria)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Subcategoria)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TipoMaterial)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TipoMaterial)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
