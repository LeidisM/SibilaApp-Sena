@model SibilaApp.Models.Prestamos

@{
    ViewData["Title"] = "Confirmar Devolución";
}

<h2>Confirmar Devolución</h2>
<p>¿Estás seguro de que deseas marcar este préstamo como devuelto?</p>

<div>
    <h4>Detalles del Préstamo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-2">Libro:</dt>
        <dd class="col-sm-10">@Model.Libro.Titulo</dd>

        <dt class="col-sm-2">Fecha de Préstamo:</dt>
        <dd class="col-sm-10">@Model.FechaPrestamo.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha de Devolución:</dt>
        <dd class="col-sm-10">@((Model.FechaDevolucion.HasValue) ? Model.FechaDevolucion.Value.ToString("dd/MM/yyyy") : "No devuelto")</dd>
    </dl>
</div>

<form asp-action="DevolverConfirmado" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Confirmar Devolución</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
