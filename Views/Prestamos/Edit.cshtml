@using SibilaApp.Models.ViewModels
@model PrestamoViewModel


<div class="row">


    <div class="col-12 ps-5 d-flex justify-content-center mb-3">
        <h2 class="mt-0" id="texto">Editar Prestamo</h2>
    </div>

    <div class="col-12 ps-5">
        <!-- Formulario de contacto -->
        <form class="w-75 mx-auto" asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <!-- Primera columna -->
                <div class="col-md-6">
                    <input asp-for="Prestamo.Id" type="hidden">

                    <div class="mb-3">
                        <label asp-for="Documento" class="form-label"></label>
                        <input asp-for="Documento" class="form-control" id="documento" required>
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div> 
                    <div class="mb-3">
                        <label asp-for="ISBN" class="form-label"></label>
                        <input asp-for="ISBN" class=" form-control" id="isbn" required>
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Prestamo.FechaPrestamo" class="form-label"></label>
                        <input asp-for="Prestamo.FechaPrestamo" readonly class="form-control" id="fechaprestamo" required>
                        <span asp-validation-for="Prestamo.FechaPrestamo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Botón de envío -->
            <div class="d-flex justify-content-center">
                <button class="btn btn-success btn-s" type="submit">Editar</button>
            </div>
        </form>
    </div>
</div>