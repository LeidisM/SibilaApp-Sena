<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SibilaApp</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesInicio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SibilaApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    @* esto es de leidis *@
    <div class="container-fluid d-flex flex-column min-vh-100">
        <div class="row flex-grow-1">
            <!-- Menú lateral -->
            <nav class="col-12 col-md-3 col-lg-2 menu-lateral">
                <h2 class="h5">Menú</h2>
                <a class="" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Inicio</a>
                <a class="" asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="fa-solid fa-user"></i> Usuarios</a>
                <a class="" asp-area="" asp-controller="Libros" asp-action="Index"><i class="fa-solid fa-book"></i> Libros</a>
                <a class="" asp-area="" asp-controller="Prestamos" asp-action="Index"><i class="fa-solid fa-landmark"></i> Préstamos</a>
                <a class="" asp-area="" asp-controller="Devoluciones" asp-action="Index"><i class="fa-solid fa-arrow-right-arrow-left"></i> Devoluciones</a>
                @using Microsoft.AspNetCore.Authentication
                @using Microsoft.AspNetCore.Authorization
                @using System.Security.Claims
                                
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Autenticaciones" asp-action="Logout" method="post" class="mt-3">
                        <button type="submit" class="btn btn-light w-100">
                            <i class="fa-solid fa-right-from-bracket"></i> Cerrar sesión
                        </button>
                    </form>
                }
            </nav>
            <!-- Parte derecha (contenido blanco) -->
            <div class="col-9 d-flex flex-column bg-white text-black pt-3 flex-grow-1">
                <div class="container">                  
                    @RenderBody()                        
                </div>
            </div>
        </div>
    </div> 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
