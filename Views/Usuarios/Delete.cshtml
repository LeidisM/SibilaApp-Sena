@using SibilaApp.Models.ViewModels
@model Usuarios
@{
    ViewData["Title"] = "Delete";
}

@* <h3>Estas seguro de eliminar este usuario</h3> *@
<div>
    <h2 class="mt-0" id="texto">¿Seguro que desea eliminar el usuario: @Model.Nombre?</h2><hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CorreoElectronico)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CorreoElectronico)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Nombre"/>
        <input type="hidden" asp-for="CorreoElectronico"/>

        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
<script>
    var mensaje = '@TempData["Mensaje"]';
    if (mensaje) {
        alert(mensaje);
    }
</script>
